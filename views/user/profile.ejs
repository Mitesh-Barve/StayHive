<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card profile-card">
                <div class="card-header">
                    <h3 class="mb-0">My Profile</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 text-center">
                            <div class="profile-avatar">
                                <i class="fa-regular fa-user-circle fa-5x"></i>
                            </div>
                            <h4 class="mt-3"><%= user.username %></h4>
                            <p class="text-muted"><%= user.email %></p>
                        </div>
                        <div class="col-md-8">
                            <div class="profile-details">
                                <h5>Account Information</h5>
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Username:</strong></span>
                                            <span><%= user.username %></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Email:</strong></span>
                                            <span><%= user.email %></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Phone:</strong></span>
                                            <span><%= user.phone || 'Not provided' %></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Bio:</strong></span>
                                            <span><%= user.bio || 'No bio provided' %></span>
                                        </div>
                                    </li>
                                    <li class="list-group-item">
                                        <div class="d-flex justify-content-between">
                                            <span><strong>Member Since:</strong></span>
                                            <span><%= user.createdAt ? user.createdAt.toDateString() : 'N/A' %></span>
                                        </div>
                                    </li>
                                </ul>
                                
                                <div class="mt-4">
                                    <h5>Profile Actions</h5>
                                    <div class="d-grid gap-2 d-md-flex justify-content-md-start">
                                        <a href="/profile/edit" class="btn btn-primary me-md-2">
                                            <i class="fa-regular fa-pen-to-square me-1"></i> Edit Profile
                                        </a>
                                        <a href="/settings" class="btn btn-outline-secondary">
                                            <i class="fa-solid fa-gear me-1"></i> Settings
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.profile-card {
    border: none;
    border-radius: var(--border-radius-medium);
    box-shadow: var(--shadow-medium);
    overflow: hidden;
}

.profile-card .card-header {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    color: white;
    border: none;
    padding: 1.5rem;
}

.profile-avatar {
    background: linear-gradient(135deg, #f5f7fa, #e4e7f4);
    border-radius: 50%;
    padding: 1.5rem;
    display: inline-block;
    margin: 1rem 0;
    color: var(--primary-color);
}

.profile-details h5 {
    font-weight: 600;
    color: var(--secondary-color);
    border-bottom: 2px solid var(--primary-color);
    padding-bottom: 0.5rem;
    margin-bottom: 1rem;
}

.list-group-item {
    border: none;
    padding: 0.75rem 0;
}

.list-group-item:first-child {
    padding-top: 0;
}

.list-group-item:last-child {
    padding-bottom: 0;
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-small);
    font-weight: 600;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #e53943, #ff4d4d);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
}

.btn-outline-secondary {
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-small);
    font-weight: 600;
}
</style>