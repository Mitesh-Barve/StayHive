<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card profile-card">
                <div class="card-header">
                    <h3 class="mb-0">Support Center</h3>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4 mb-4 mb-md-0">
                            <div class="list-group">
                                <a href="#" class="list-group-item list-group-item-action active">
                                    <i class="fa-regular fa-circle-question me-2"></i> Help Center
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    <i class="fa-regular fa-envelope me-2"></i> Contact Us
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    <i class="fa-solid fa-comment-dots me-2"></i> Live Chat
                                </a>
                                <a href="#" class="list-group-item list-group-item-action">
                                    <i class="fa-solid fa-phone me-2"></i> Call Support
                                </a>
                            </div>
                            
                            <div class="card mt-4">
                                <div class="card-body">
                                    <h5>Emergency Support</h5>
                                    <p class="mb-2">For urgent issues during your stay:</p>
                                    <p class="mb-1"><i class="fa-solid fa-phone me-2"></i> +1 (555) 123-4567</p>
                                    <p class="mb-0"><i class="fa-regular fa-envelope me-2"></i> emergency@stayhive.com</p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-8">
                            <h4 class="mb-4">How can we help you today?</h4>
                            
                            <form method="POST" action="/user/support">
                                <div class="mb-3">
                                    <label for="subject" class="form-label">Subject</label>
                                    <select class="form-select" id="subject" name="subject">
                                        <option selected>Select a topic</option>
                                        <option value="booking">Booking Issue</option>
                                        <option value="payment">Payment Problem</option>
                                        <option value="account">Account Access</option>
                                        <option value="listing">Listing Inquiry</option>
                                        <option value="technical">Technical Support</option>
                                        <option value="other">Other</option>
                                    </select>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="message" class="form-label">Message</label>
                                    <textarea class="form-control" id="message" name="message" rows="5" placeholder="Describe your issue in detail..."></textarea>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="attachment" class="form-label">Attachment (Optional)</label>
                                    <input class="form-control" type="file" id="attachment" name="attachment">
                                </div>
                                
                                <div class="d-grid">
                                    <button type="submit" class="btn btn-primary">Submit Request</button>
                                </div>
                            </form>
                            
                            <div class="mt-5">
                                <h5>Frequently Asked Questions</h5>
                                <div class="accordion" id="faqAccordion">
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#faq1">
                                                How do I cancel a booking?
                                            </button>
                                        </h2>
                                        <div id="faq1" class="accordion-collapse collapse show" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                You can cancel a booking from the "My Bookings" section. Cancellation policies vary by listing.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq2">
                                                How do I change my account information?
                                            </button>
                                        </h2>
                                        <div id="faq2" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                Go to "My Profile" and click "Edit Profile" to update your personal information.
                                            </div>
                                        </div>
                                    </div>
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#faq3">
                                                What payment methods do you accept?
                                            </button>
                                        </h2>
                                        <div id="faq3" class="accordion-collapse collapse" data-bs-parent="#faqAccordion">
                                            <div class="accordion-body">
                                                As per your preference, this is a simple booking system without payment integration.
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.profile-card {
    border: none;
    border-radius: var(--border-radius-medium);
    box-shadow: var(--shadow-medium);
    overflow: hidden;
}

.profile-card .card-header {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    color: white;
    border: none;
    padding: 1.5rem;
}

.list-group-item {
    border: 1px solid rgba(0, 0, 0, 0.125);
    border-left: none;
    border-right: none;
    border-radius: 0;
    padding: 1rem 1.25rem;
}

.list-group-item:first-child {
    border-top: none;
    border-top-left-radius: var(--border-radius-small);
    border-top-right-radius: var(--border-radius-small);
}

.list-group-item:last-child {
    border-bottom: none;
    border-bottom-left-radius: var(--border-radius-small);
    border-bottom-right-radius: var(--border-radius-small);
}

.list-group-item.active {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    border-color: var(--primary-color);
}

.form-label {
    font-weight: 600;
    color: var(--secondary-color);
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    border: none;
    padding: 0.75rem 1.5rem;
    border-radius: var(--border-radius-small);
    font-weight: 600;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #e53943, #ff4d4d);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
}

.accordion-button {
    font-weight: 600;
    color: var(--secondary-color);
}

.accordion-button:not(.collapsed) {
    background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    color: var(--primary-color);
}
</style>