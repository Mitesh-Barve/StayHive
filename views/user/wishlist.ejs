<% layout("/layouts/boilerplate") %>
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-12">
            <div class="card profile-card">
                <div class="card-header">
                    <h3 class="mb-0">My Wishlist</h3>
                </div>
                <div class="card-body">
                    <% if (listings && listings.length > 0) { %>
                        <div class="row">
                            <% listings.forEach(listing => { %>
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="listing-card">
                                        <img src="<%= listing.image.url %>" class="card-img-top" alt="<%= listing.title %>">
                                        <div class="card-body">
                                            <h5 class="card-title"><%= listing.title %></h5>
                                            <p class="card-text"><span class="custom-house-icon"></span> <%= listing.location %>, <%= listing.country %></p>
                                            <div class="d-flex justify-content-between align-items-center">
                                                <span class="price">$<%= listing.price %>/night</span>
                                                <div>
                                                    <a href="/listings/<%= listing._id %>" class="btn btn-sm btn-primary me-2">View Details</a>
                                                    <form method="POST" action="/user/wishlist/<%= listing._id %>?_method=DELETE" class="d-inline">
                                                        <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Remove from wishlist?')">
                                                            <i class="fa-solid fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }); %>
                        </div>
                    <% } else { %>
                        <div class="text-center py-5">
                            <i class="fa-regular fa-heart fa-3x mb-3 text-muted"></i>
                            <h4>Your wishlist is empty</h4>
                            <p class="text-muted">Save properties to your wishlist to view them here.</p>
                            <a href="/listings" class="btn btn-primary">Explore Listings</a>
                        </div>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.profile-card {
    border: none;
    border-radius: var(--border-radius-medium);
    box-shadow: var(--shadow-medium);
    overflow: hidden;
}

.profile-card .card-header {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    color: white;
    border: none;
    padding: 1.5rem;
}

.listing-card {
    border: none;
    border-radius: var(--border-radius-small);
    overflow: hidden;
    box-shadow: var(--shadow-medium);
    transition: all 0.3s ease;
    height: 100%;
}

.listing-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-large);
}

.card-img-top {
    height: 200px;
    object-fit: cover;
}

.card-title {
    font-weight: 700;
    color: var(--secondary-color);
    font-size: 1.1rem;
}

.price {
    font-weight: 700;
    color: var(--primary-color);
}

.btn-primary {
    background: linear-gradient(135deg, var(--primary-color), #ff7a84);
    border: none;
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-small);
    font-weight: 600;
    font-size: 0.85rem;
}

.btn-primary:hover {
    background: linear-gradient(135deg, #e53943, #ff4d4d);
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(254, 66, 77, 0.3);
}

.btn-outline-danger {
    padding: 0.5rem 1rem;
    border-radius: var(--border-radius-small);
    font-weight: 600;
    font-size: 0.85rem;
}
</style>