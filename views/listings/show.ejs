<% layout("/layouts/boilerplate") %>

<style>
  /* Enhanced show page styles */
  .show-img {
    height: 60vh;
    border-radius: var(--border-radius-medium) !important;
    object-fit: cover;
    width: 100%;
    box-shadow: var(--shadow-large);
  }
  
  .font-title {
    font-size: 2rem;
    font-weight: 800;
    margin-bottom: 1rem;
    color: var(--secondary-color);
    position: relative;
    padding-bottom: 0.5rem;
  }
  
  .font-title::after {
    content: '';
    display: block;
    width: 60px;
    height: 4px;
    background: var(--primary-color);
    border-radius: 2px;
    margin-top: 0.5rem;
  }
  
  .listing-details {
    border-top: 1px solid #eee;
    padding-top: 1.5rem;
  }
  
  .price-info h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--secondary-color);
  }
  
  .booking-card-static {
    border-radius: var(--border-radius-medium) !important;
    box-shadow: var(--shadow-medium);
    border: none;
    transition: all 0.3s ease;
    position: sticky;
    top: 2rem;
    background: white;
    padding: 1.5rem;
  }
  
  .booking-card-static:hover {
    box-shadow: var(--shadow-large);
    transform: translateY(-5px);
  }
  
  .btns {
    display: flex;
    gap: 1rem;
    margin-top: 1rem;
  }
  
  @media (max-width: 768px) {
    .btns {
      flex-direction: column;
    }
    
    .show-img {
      height: 40vh;
    }
  }
  
  /* Review section enhancements */
  .review-card {
    border-radius: var(--border-radius-small) !important;
    box-shadow: var(--shadow-small);
    border: none;
    transition: all 0.3s ease;
    margin-bottom: 1rem;
  }
  
  .review-card:hover {
    box-shadow: var(--shadow-medium);
  }
  
  .starability-result {
    font-size: 1.2rem;
  }
</style>

<div class="container mt-4">
  <div class="row">
    <div class="col-12">
      <h1 class="font-title"><%= listing.title %></h1>
      <p class="text-muted">
        <span class="custom-house-icon"></span> <%= listing.location %>, <%= listing.country %>
      </p>
    </div>
  </div>
  
  <div class="row mt-3">
    <div class="col-lg-8 col-md-12">
      <div class="card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="<%= listing.title %>">
        <div class="card-body">
          <!-- Fixed: Check if owner exists before accessing username -->
          <h2 class="card-title">Entire rental unit hosted by <%= listing.owner ? listing.owner.username : 'Unknown Host' %></h2>
          
          <div class="listing-details mt-4">
            <p class="card-text">
              <%= listing.description %>
            </p>
            
            <div class="price-info mt-4">
              <h3>
                <i class="fa fa-rupee-sign"></i> <%= listing.price.toLocaleString("en-IN") %> 
                <small class="text-muted">per night</small>
              </h3>
            </div>
          </div>
        </div>
      </div>
      
      <% if (currUser && listing.owner && listing.owner._id.equals(currUser._id)) { %>
        <div class="btns mt-4">
          <a href="/listings/<%= listing._id %>/edit" class="btn add-btn">
            <i class="fa fa-edit"></i> Edit
          </a>
          
          <form method="post" action="/listings/<%= listing._id %>?_method=DELETE" class="d-inline">
            <button type="submit" class="btn btn-dark" onclick="return confirm('Are you sure you want to delete this listing?')">
              <i class="fa fa-trash"></i> Delete
            </button>
          </form>
        </div>
      <% } %>
    </div>
    
    <div class="col-lg-4 col-md-12">
      <!-- Booking card (simplified as per user preference) -->
      <div class="card booking-card-static">
        <div class="card-body">
          <h4>
            <i class="fa fa-rupee-sign"></i> <%= listing.price.toLocaleString("en-IN") %> 
            <small class="text-muted">per night</small>
          </h4>
          
          <% if (currUser) { %>
            <form method="POST" action="/user/wishlist/<%= listing._id %>" class="mt-3">
              <button type="submit" class="btn btn-outline-primary w-100 mb-3">
                <i class="fa-regular fa-heart me-2"></i> Save to Wishlist
              </button>
            </form>
          <% } %>
          
          <div class="booking-form mt-3">
            <form method="POST" action="/listings/<%= listing._id %>/book">
              <div class="mb-3">
                <label class="form-label">Check-in</label>
                <input type="date" class="form-control" name="checkin" required>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Check-out</label>
                <input type="date" class="form-control" name="checkout" required>
              </div>
              
              <div class="mb-3">
                <label class="form-label">Guests</label>
                <select class="form-control" name="guests">
                  <option value="1">1 guest</option>
                  <option value="2">2 guests</option>
                  <option value="3">3 guests</option>
                  <option value="4">4 guests</option>
                  <option value="5">5+ guests</option>
                </select>
              </div>
              
              <% if (currUser) { %>
                <button type="submit" class="btn add-btn w-100">
                  <i class="fa fa-calendar-check"></i> Book now
                </button>
              <% } else { %>
                <a href="/login" class="btn add-btn w-100">
                  <i class="fa fa-calendar-check"></i> Login to Book
                </a>
              <% } %>
            </form>
            
            <p class="text-center mt-3 text-muted small">
              You won't be charged yet
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <div class="row mt-5">
    <div class="col-12">
      <hr>
      
      <% if (currUser) { %>
        <h3>Leave a Review</h3>
        <div class="card mt-3">
          <div class="card-body">
            <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">
              <div class="mb-3">
                <label for="rating" class="form-label">Rating</label>
                <fieldset class="starability-slot">
                  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked aria-label="No rating." />
                  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                  <label for="first-rate1" title="Terrible">1 star</label>
                  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                  <label for="first-rate2" title="Not good">2 stars</label>
                  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                  <label for="first-rate3" title="Average">3 stars</label>
                  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                  <label for="first-rate4" title="Very good">4 stars</label>
                  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                  <label for="first-rate5" title="Amazing">5 stars</label>
                </fieldset>
              </div>
              
              <div class="mb-3">
                <label for="comment" class="form-label">Comment</label>
                <textarea id="comment" rows="4" class="form-control" name="review[Comment]" required></textarea>
                <div class="invalid-feedback">Please add some comment</div>
              </div>
              
              <button type="submit" class="btn add-btn">
                <i class="fa fa-paper-plane"></i> Submit Review
              </button>
            </form>
          </div>
        </div>
      <% } %>
      
      <hr class="mt-5">
      
      <% if(listing.reviews.length > 0) { %>
        <h3>All Reviews (<%= listing.reviews.length %>)</h3>
        
        <div class="row mt-4">
          <% for(review of listing.reviews) { %>
            <div class="col-md-6 mb-4">
              <div class="card review-card">
                <div class="card-body">
                  <div class="d-flex justify-content-between">
                    <h5 class="card-title">
                      @<%= review.author && review.author.username ? review.author.username : 'Unknown User' %>
                    </h5>
                    <p class="starability-result card-text mb-0" data-rating="<%=review.rating %>">
                    </p>
                  </div>
                  
                  <p class="card-text mt-3">
                    <%= review.Comment %>
                  </p>
                  
                  <small class="text-muted">
                    <%= review.date ? review.date.toDateString() : 'Just now' %>
                  </small>
                  
                  <% if (currUser && review.author && review.author._id.equals(currUser._id)) { %>
                    <form method="POST" action="/listings/<%= listing._id %>/reviews/<%=review._id %>?_method=DELETE" class="mt-3">
                      <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this review?')">
                        <i class="fa fa-trash"></i> Delete
                      </button>
                    </form>
                  <% } %>
                </div>
              </div>
            </div>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Set minimum date for check-in and check-out to today
  document.addEventListener('DOMContentLoaded', function() {
    const today = new Date().toISOString().split('T')[0];
    const checkinInputs = document.querySelectorAll('input[name="checkin"]');
    const checkoutInputs = document.querySelectorAll('input[name="checkout"]');
    
    checkinInputs.forEach(input => {
      input.min = today;
      // Set default to today
      if (!input.value) {
        input.value = today;
      }
    });
    
    checkoutInputs.forEach(input => {
      const tomorrow = new Date();
      tomorrow.setDate(tomorrow.getDate() + 1);
      input.min = tomorrow.toISOString().split('T')[0];
      // Set default to tomorrow
      if (!input.value) {
        input.value = tomorrow.toISOString().split('T')[0];
      }
    });
    
    // Add validation to ensure checkout is after checkin
    document.querySelectorAll('form[action$="/book"]').forEach(form => {
      form.addEventListener('submit', function(e) {
        const checkin = new Date(this.querySelector('input[name="checkin"]').value);
        const checkout = new Date(this.querySelector('input[name="checkout"]').value);
        
        if (checkout <= checkin) {
          e.preventDefault();
          alert('Check-out date must be after check-in date');
          return false;
        }
      });
    });
  });
</script>